<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#EDEDED">

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/my_cart_img"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mystore_logo"/>

        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_cancel_24" />

        <TextView
            android:id="@+id/my_cart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="24sp"
            android:layout_below="@+id/delete"
            android:layout_toRightOf="@+id/my_cart_img"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/rupee2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="â‚¹"
            android:layout_below="@+id/my_cart_name"
            android:layout_toRightOf="@+id/my_cart_img"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/my_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textSize="26sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/my_cart_name"
            android:layout_toRightOf="@+id/rupee2"/>

        <TextView
            android:id="@+id/quantit_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/my_cart_img"
            android:layout_below="@id/my_cart_price"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/my_cart_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toRightOf="@id/quantit_text2"
            android:layout_below="@+id/my_cart_price"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>